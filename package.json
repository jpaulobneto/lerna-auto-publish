    "@auto-it/all-contributors": "^9.36.1",
    "@auto-it/conventional-commits": "^9.36.1",
    "@auto-it/released": "^9.36.1",
    "all-contributors-cli": "^6.14.2",
    "auto": "^9.36.1",
    "eslint": "^7.1.0",
    "jest": "^26.0.1",
    "lerna": "^3.21.0",
    "prettier": "^2.0.5"
  },
  "auto": {
    "plugins": [
